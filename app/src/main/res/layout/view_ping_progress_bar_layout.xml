<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_page_bg"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >


    <TextView

            android:id="@+id/tv_slow"
            style="@style/TextView.smallGray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            android:text="@string/str_slow"
            />

    <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_slow"
            app:layout_constraintBottom_toTopOf="@id/myProgressbar"
            app:layout_constraintLeft_toLeftOf="@id/tv_slow"
            app:layout_constraintRight_toRightOf="@id/tv_slow"
            android:background="@color/line_color"
            android:layout_marginTop="10dp"
            />

    <TextView

            android:id="@+id/tv_common"
            style="@style/TextView.smallGray"
            app:layout_constraintTop_toTopOf="@id/tv_slow"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/str_common"
            />

    <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_common"
            app:layout_constraintBottom_toTopOf="@id/myProgressbar"
            app:layout_constraintLeft_toLeftOf="@id/tv_common"
            app:layout_constraintRight_toRightOf="@id/tv_common"
            android:background="@color/line_color"
            android:layout_marginTop="10dp"
            />


    <TextView

            android:id="@+id/tv_fast"
            style="@style/TextView.smallGray"
            app:layout_constraintTop_toTopOf="@id/tv_slow"

            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/str_fast"
            />

    <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_fast"
            app:layout_constraintBottom_toTopOf="@id/myProgressbar"
            app:layout_constraintLeft_toLeftOf="@id/tv_fast"
            app:layout_constraintRight_toRightOf="@id/tv_fast"
            android:background="@color/line_color"
            android:layout_marginTop="10dp"
            />
    <ProgressBar
            android:id="@+id/myProgressbar"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/Progressbar.horizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:progressDrawable="@drawable/progress_horizontal_pink"

            />
</android.support.constraint.ConstraintLayout>