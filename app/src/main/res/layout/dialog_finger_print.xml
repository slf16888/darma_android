<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_white"
        android:gravity="center"
        android:orientation="vertical">

    <TextView
            style="@style/TextView.titleText"
            android:text="@string/str_fingerprint"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/x200"
            android:paddingTop="20dp"
            android:layout_height="wrap_content"
            />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_fingerprint"/>


    <TextView
            android:id="@+id/tv_fingerprint_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            style="@style/TextView.red"
            android:maxLines="1"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            />

    <TextView
            android:id="@+id/tv_cancel"
            style="@style/TextView.green"
            android:background="@drawable/bg_white"
            android:layout_height="@dimen/button_height"
            android:layout_width="match_parent"
            android:text="@string/str_cancel"/>

</LinearLayout>