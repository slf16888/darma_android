<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_page_bg"
        android:orientation="vertical"
        tools:context=".ui.activity.SetUnlockWayActivity">

    <include layout="@layout/layout_top_view"/>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height"
            android:background="@drawable/bg_white"
            android:paddingLeft="@dimen/page_margin"
            android:paddingRight="@dimen/page_margin"
            >

        <TextView
                style="@style/TextView.black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/str_password_unlock"
                />


        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"
                app:layout_constraintBottom_toBottomOf="parent"
                />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height"
            android:background="@drawable/bg_white"
            android:paddingLeft="@dimen/page_margin"
            android:paddingRight="@dimen/page_margin"
            >

        <TextView
                style="@style/TextView.black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/str_finger_print_unlock"
                />


        <ch.ielse.view.SwitchView
                android:id="@+id/sv_fingerprint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SwitchView"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"
                app:layout_constraintBottom_toBottomOf="parent"
                />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height"
            android:background="@drawable/bg_white"
            android:paddingLeft="@dimen/page_margin"
            android:paddingRight="@dimen/page_margin"
            >

        <TextView
                style="@style/TextView.black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/str_gesture_unlock"
                />


        <ch.ielse.view.SwitchView
                android:id="@+id/sv_gesture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SwitchView"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"
                app:layout_constraintBottom_toBottomOf="parent"
                />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>
