<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.activity.SendSuccessActivity">


    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/toolBarStyle"

            >

        <TextView
                android:id="@+id/tv_header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="@string/str_trans_detail"
                style="@style/TextView.titleText"
                />
    </android.support.v7.widget.Toolbar>


    <ScrollView
            android:id="@+id/ll_root"
            android:layout_width="match_parent"
            android:background="@color/color_page_bg"
            android:layout_height="0dp"
            android:layout_weight="1">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_page_bg"
                android:paddingRight="@dimen/page_margin"
                android:paddingLeft="@dimen/page_margin"
                android:paddingTop="@dimen/page_margin"
                android:paddingBottom="@dimen/page_margin"
                android:gravity="center_horizontal"
                android:orientation="vertical">


            <ImageView
                    android:id="@+id/iv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/page_margin"
                    android:src="@mipmap/ic_success"/>
            <TextView
                    android:id="@+id/tv_status"
                    style="@style/TextView.black"
                    android:text="@string/str_send_success"
                    android:layout_marginBottom="@dimen/page_margin"
                    />
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/cl_integrated"
                    android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/et_txid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:hint="@string/str_trans_id"
                        android:orientation="vertical"
                        app:errorEnabled="true"
                        app:errorTextAppearance="@style/errorAppearance"
                        app:hintTextAppearance="@style/hintTextStyle"
                      >

                    <android.support.design.widget.TextInputEditText
                            style="@style/EditText.inputText.MultiLine"
                            android:enabled="false"
                            android:paddingRight="40dp"/>
                </android.support.design.widget.TextInputLayout>

                <ImageView
                        android:id="@+id/iv_copy_txid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginBottom="20dp"
                        android:padding="10dp"
                        android:src="@mipmap/ic_copy_pink"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.design.widget.TextInputLayout
                    android:id="@+id/et_payment_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:hint="@string/str_payment_id_hint"
                    android:orientation="vertical"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/errorAppearance"
                    app:hintTextAppearance="@style/hintTextStyle">
                <android.support.design.widget.TextInputEditText
                        style="@style/EditText.inputText.MultiLine"
                        android:enabled="false"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:id="@+id/et_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:hint="@string/str_date"
                    android:orientation="vertical"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/errorAppearance"
                    app:hintTextAppearance="@style/hintTextStyle">
                <android.support.design.widget.TextInputEditText
                        style="@style/EditText.inputText.MultiLine"
                        android:enabled="false"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:id="@+id/et_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:hint="@string/str_money"
                    android:orientation="vertical"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/errorAppearance"
                    app:hintTextAppearance="@style/hintTextStyle">
                <android.support.design.widget.TextInputEditText
                        style="@style/EditText.inputText"
                        android:enabled="false"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/et_fee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:hint="@string/str_fee"
                    android:orientation="vertical"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/errorAppearance"
                    app:hintTextAppearance="@style/hintTextStyle">
                <android.support.design.widget.TextInputEditText
                        style="@style/EditText.inputText"
                        android:enabled="false"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/et_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:hint="@string/str_height"
                    android:orientation="vertical"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/errorAppearance"
                    app:hintTextAppearance="@style/hintTextStyle">
                <android.support.design.widget.TextInputEditText
                        style="@style/EditText.inputText"
                        android:enabled="false"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:id="@+id/et_topo_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:hint="@string/str_topo_height"
                    android:orientation="vertical"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/errorAppearance"
                    app:hintTextAppearance="@style/hintTextStyle">
                <android.support.design.widget.TextInputEditText
                        style="@style/EditText.inputText"
                        android:enabled="false"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:id="@+id/et_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:hint="@string/str_type"
                    android:orientation="vertical"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/errorAppearance"
                    app:hintTextAppearance="@style/hintTextStyle">
                <android.support.design.widget.TextInputEditText
                        style="@style/EditText.inputText"
                        android:enabled="false"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>